# Example Caddyfile for local development or manual Caddy setup
# Coolify automatically configures Caddy, this is just for reference

:8080 {
    root * public
    php_fastcgi localhost:9000
    file_server
    
    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Try files, fallback to index.php
    try_files {path} /index.php?{query}
    
    # Deny access to sensitive files
    @sensitive {
        path /.env* /composer.json /composer.lock /.git*
    }
    respond @sensitive 403
    
    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.webp *.ico *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # Gzip compression
    encode gzip
    
    # Logging
    log {
        output file /var/log/caddy/access.log
    }
}

